<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_faculty__details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.learn.binod.navigationdrawer.Faculty_Details">


    <TextView
        android:text="FACULTY  DETAILS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="200dp"/>
    <TextView
        android:text="ID"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:id="@+id/textView_ID"
        android:layout_alignBaseline="@+id/editText_ID"
        android:layout_alignBottom="@+id/editText_ID"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText_ID"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_marginTop="20dp"
        android:text="Faculty Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_FacultyName"
        android:layout_alignBaseline="@+id/editText_FacultyName"
        android:layout_alignBottom="@+id/editText_FacultyName"
        android:layout_alignStart="@+id/textViewAddress" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText_FacultyName"
        android:layout_below="@+id/editText_ID"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_marginTop="20dp"
        android:text="Description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_Description"
        android:layout_alignBaseline="@+id/editText_Description"
        android:layout_alignBottom="@+id/editText_Description"
        android:layout_alignStart="@+id/textViewAddress" />

    <EditText
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText_Description"
        android:layout_below="@+id/editText_FacultyName"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_marginTop="20dp"
        android:text="ViewAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_viewALL"
        android:layout_alignBaseline="@+id/button_delete"
        android:layout_alignBottom="@+id/button_delete"
        android:layout_alignStart="@+id/button_update" />
    <Button

        android:text="Delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="49dp"
        android:id="@+id/button_delete"
        android:layout_below="@+id/button_add"
        android:layout_toEndOf="@+id/textView_ID" />

    <Button

        android:text="ADD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_add"
        android:layout_marginTop="80dp"
        android:layout_below="@+id/editText_FacultyName"
        android:layout_alignStart="@+id/button_delete" />

    <Button
        android:text="Update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="39dp"
        android:id="@+id/button_update"
        android:layout_marginTop="1dp"
        android:layout_alignTop="@+id/button_add"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
